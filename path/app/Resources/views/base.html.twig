    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="description"content="" />
        <meta name="keywords" content="" />
        <meta name="google-site-verification" content="SeofOTfUyHE48_yX-s-Q2BUdqWuTiXZiX9fSkdGgZ9w" />
        <meta name="robots" content="index,follow" />
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=3">
        <meta http-equip="cache-control" content="no-cache">


        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
           {% stylesheets
                '%kernel.root_dir%/../vendor/twitter/bootstrap/less/bootstrap.less'
                '%kernel.root_dir%/../vendor/twitter/bootstrap/less/responsive.less'
                '@FOSCommentBundle/Resources/assets/css/comments.css'
                'bundles/myutils/js/select2/select2.css'
                'bundles/myutils/js/tagsinput/bootstrap-tagsinput.css'
                'bundles/acmetwig/css/acme-bootstrap.css'
                'bundles/acmetwig/css/default.css'
                'bundles/wssports/css/font-icons/style.css'
                'bundles/wsstyle/css/default.css'
                'bundles/wsstyle/css/style.css'   
                filter="cssrewrite"             
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}  
        {% endblock %} 

        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Viga">
        <!--<link rel="icon" type="image/x-icon" href="{{ asset('bundles/wsstyle/img/wesport.ico') }}" />-->
        <link rel="icon" type="image/png" href="{{ asset('bundles/wsstyle/img/LOGO.gif') }}" />
    
    </head>


    <body>

        {# NAVBAR #}

        {% block navbar %}
            <div class="navbar navbar-fixed-top navbar-ws">
                <div class="desktop-menu" id="desktop-menu">
                    {# knp_menu_render('main', {'template': 'MyPageBundle:Menu:main_menu.html.twig'}) #}
                    <ul class="nav">
                        <li>
                            <a href="/" class="weSport" id="wsSportBrand" title="Accueil">
                                <img src="{{ asset('bundles/wsstyle/img/LOGO.gif') }}" alt="WeSport logo" class="logo">        
                                <img src="{{ asset('bundles/wsstyle/img/BRAND.png') }}" alt="WeSport.fr" class="wesport">
                            </a>
                        </li>

                        <li><a href="{{ path('ws_calendar') }}">Calendrier</a></li>

                        <li id="menu-createevent">
                            <a class="mainbutton" href="{{ path('ws_event_new') }} ">Poster un sport</a>
                        </li>

                         {{ render(controller('MyPageBundle:Menu:TopMenu', {
                            'max': 3
                        })) }}
                        
                        <li><a href="{{ path('blog_homepage')}}">Blog</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{path('page_new', {}) }}">New</a></li>
                        {% endif %}
                    </ul>

                    <ul class="nav pull-right">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li>
                                <a href="{{path('fos_user_profile_edit') }}">
                                    <img src="{{ asset(app.user.avatar.getWebPath) }}" alt="" class="nav-avatar">                                   
                                    <span class="nav-login">{{ app.user.username }}</span>
                                </a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('user_profil_edit', {action:'account' }) }}">Mon compte</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="{{ path('sonata_admin_dashboard') }}">Administration</a></li>
                                    {% endif %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                                </ul>
                            </li>
                        {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                        <li><a class="secondbutton" href="{{ path('fos_user_registration_register') }}">Inscription</a></li>
                        {% endif %}
                    </ul>
                    <ul class="nav pull-right lang-menu">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Langue <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}"><i class="flag flag-fr"></i>Français</a></li>
                                <li><a href="{{  path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'}))}}"><i class="flag flag-uk"></i>English</a></li>
                            </ul>
                        </li>                          
                    </ul>                                                                
                </div>
            </div>
        {% endblock %}


        <div class="container-fluid mainContainer">
            
            {% block body %}
            {% endblock %}

        </div>

        <div class="footer container-fluid">
            <div class="container">
                {{ render(controller('MyPageBundle:Menu:BottomMenu', {
                    'max': 3
                })) }}
            </div>
        </div>


        {% block javascripts %}
            {% javascripts
                '../vendor/jquery/jquery/jquery-1.9.1.min.js'
                '../vendor/twitter/bootstrap/js/bootstrap-dropdown.js'
                '../vendor/twitter/bootstrap/js/bootstrap-tooltip.js'
                '../app/Resources/public/js/*.js'
                '@MyUtilsBundle/Resources/public/js/php_functions.js'
                '@MyUtilsBundle/Resources/public/js/typeahead.js/handlebars-v2.0.0.js'
                '@MyUtilsBundle/Resources/public/js/typeahead.js/typeahead.bundle.js'
                '@MyUtilsBundle/Resources/public/js/select2/select2.min.js'
                '@MyUtilsBundle/Resources/public/js/select2/locale/select2_locale_fr.js'
                '@MyUtilsBundle/Resources/public/js/tagsinput/bootstrap-tagsinput.js'
                '@MyUtilsBundle/Resources/public/js/utils.js'
                '@WsEventsBundle/Resources/public/js/*.js'
                '@WsSportsBundle/Resources/public/js/*.js'
                '@MyWorldBundle/Resources/public/js/*.js'

            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}


        <script type="text/javascript">
            $(document).ready(function() {
                {% block document_ready %}{% endblock %}
            });
        </script>
    </body>
</html>
