{% extends 'WsMailerBundle:Template:personal.html.twig' %}

{% block title %}
    <strong>{% if alert.user is not null %} {{ alert.user.username|capitalize }}, {% else %} Bonjour,{% endif %}</strong><br />
    
    Aprés {{ alert.duration }} mois d'activités, votre alerte coSporturage arrive à expiration... Mais vous pouvez la prolonger si vous le désirez !

{% endblock title %}

{% block content %}
    {% set nb_displayed = 2 %}
    <table cellpadding="0" cellspacing="0" border="0" class="content" style="background-color:#FFF;  position: relative; width:100%; padding:0 10%;">
        <tbody>
            <tr height="50" style="margin-top:10px;margin-bottom:10px;">
                <td>
                    <style type="text/css">
                        .block_event { background-color: #FFF2DA; width:100%; padding:10px; border:1px solid #AAA; }
                    </style>
                    <table cellpadding="0" cellspacing="0" border="0" class="block_event" >
                        <tbody>
                            <tr>
                                <td>
                                {% for sport in alert.search.sports %}
                                    <img src="{{ asset('bundles/wssports/img/sport_icon/' ~ sport ~ '.gif') }}">
                                {% endfor %}
                                </td>
                                <td>
                                    <a href="{{ path('ws_alerts_index') }}">
                                        <strong>Alert_id = {{ alert.id }}</strong>
                                    </a>
                                    <br>
                                    <small><strong>à faire : ecrire une belle description de l'alerte</strong></small>
                                    <br>                                    
                                </td>   
                            </tr>
                        </tbody>
                    </table>              
                </td>
            </tr>
            
            
            <tr>
                <td>
                    <strong>Prolonger votre alerte simplement</strong> en cliquant sur les liens suivants :
                    <ul>
                        <li><a href="{{ path('ws_alerts_extend',{nbmonth:1,alert:alert.id}) }}">prolonger d'un mois</a></li>
                        <li><a href="{{ path('ws_alerts_extend',{nbmonth:2,alert:alert.id}) }}">prolonger de 2 mois</a></li>
                        <li><a href="{{ path('ws_alerts_extend',{nbmonth:6,alert:alert.id}) }}">prolonger de 6 mois</a></li>
                    </ul>
                </td>
            </tr>

        </tbody>
    </table>
{% endblock content %}