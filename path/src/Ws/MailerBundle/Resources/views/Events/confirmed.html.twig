{% extends 'WsMailerBundle:Template:personal.html.twig' %}

{% block title %}
    <strong>Bonjour,</strong><br />
    L'activité aura bien lieu!
{% endblock title %}

{% block content %}
    <table cellpadding="0" cellspacing="0" border="0" class="content" style="background-color:#FFF;  position: relative; width:100%; padding:0 10%;">
        <tbody>
            <tr height="50">
                <td>                    
                    Le nombre minimum a été atteint ou l'organisateur a confirmé l'événement. L'activité <a href="{{ event|link2event }}">{{ event.title }}</a> aura bien lieu!
                </td>
            </tr>
            <tr>
                <td>
                    <small>Récapitulatif:</small>
                    {# BLOCK_EVENT #}
                    {% include 'WsMailerBundle:Template:block_event.html.twig' with {'event':event}  %}                   
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock content %}