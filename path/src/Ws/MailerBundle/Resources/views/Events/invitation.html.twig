{% extends 'WsMailerBundle:Template:personal.html.twig' %}

{% block title %}
    <strong>Bonjour,</strong><br />
    Vous avez reçu une invitation !
{% endblock title %}

{% block content %}
    <table cellpadding="0" cellspacing="0" border="0" class="content">
        <tbody>
            <tr height="50">
                <td>
                    <strong>{{ invit.inviter.username|capitalize }}</strong> vous invite à participer à :
                </td>
            </tr>
            <tr>
                <td>
                    {% include 'WsMailerBundle:Template:block_event.html.twig' with {'event':invit.event}  %}
                </td>
            </tr>

            {% if invit.content is not null %}
            <tr>
                <td>
                        <table cellpadding="0" cellspacing="0" border="0" style="width:80%; margin:10px 10%; font-size:12px; color:#333">
                            <tbody>
                                <tr>
                                    <td><i style="text-decoration:underline">Message de {{ invit.inviter.username|capitalize }} :</i></td>
                                </tr>
                                <tr>
                                    <td>
                                        <i>" {{ invit.content }} "</i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </td>
            </tr>
            {% endif %}

            <tr height="50">
                    <td>
                        Participerez-vous ? <a href="">OUI</a> | <a href="">NON</a>
                        <br/>
                        Sinon vous pouvez en discutez en vous rendant sur <a href="">cette page</a> !
                    </td>
            </tr>    
        </tbody>
    </table>
{% endblock content %}