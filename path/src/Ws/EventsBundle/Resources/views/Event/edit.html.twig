{% extends '::layout_centered.html.twig' %}

{% block page_content %}

    <div class="createEvent">
        <div class="fresque"></div>
        <div class="white-sheet">           
            <div class="head-sheet">        
                <h1 class="title-sheet">
                    Modifier votre activit√©
                </h1>
            </div>

        <div class="col_large">
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.sport) }}
                {{ form_row(form.level) }}
                {{ form_row(form.title) }}
                {{ form_row(form.spot.spot_id) }}
                {{ form_row(form.spot.spot_slug) }}
                {{ form_widget(form.spot.location.city_id, {'id':'city_id','attr': {'data-autocomplete-url':url('my_world_autocompletecity')}}) }}
                {{ form_row(form.spot.location.city_name, {'id':'city_name'}) }}
                {{ form_row(form.spot.name )}}
                {{ form_row(form.spot.address) }}
                {{ form_row(form.date) }}
                {{ form_row(form.serie.startdate) }}
                {{ form_row(form.serie.enddate) }}
                {{ form_row(form.serie) }}
                {{ form_row(form.time) }}
                {{ form_row(form.nbmin) }}
                {{ form_row(form.description) }}
                {{ form_row(form.phone) }}

                <button type="submit" class="btn btn-large btn-primary fright">Save</button>

                
               
            {{ form_widget(form._token) }} 
            {{ form_end(form, {'render_rest': false}) }}
                   
        </div>

        <div class="col_small">
            <div class="block form-submit"></div>
        </div>
        
        <div class="clearfix"></div>
        <div class="fresque"></div>
    
    </div>
    
{% endblock %}

