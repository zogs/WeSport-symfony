{{ form_start(form, {'class':'form form-ws','attr':{'class':'form form-ws'}} ) }}
	   	
	   	{% if form_errors(form) %}
	   			{{ form_errors(form) }}
	   	{% endif %}
		
		{% if app.user.email is defined %}
		{{ form_row(form.email,{'attr':{'value':app.user.email}}) }}
		{% else %}
		{{ form_row(form.email) }}
		{% endif %}
		
		{{ form_row(form.title) }}
		{{ form_row(form.message) }}
	    
	    <button type="submit" class="btn-ws">Envoyer</button>
	    <p>&nbsp;</p>

	{{ form_end(form) }}