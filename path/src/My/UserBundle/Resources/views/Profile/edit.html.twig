{% extends "::layout_centered.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_content %}

	{% set action = app.request.query.get('action') %}
		
		<div class="page-account">
			<div class="container page-container white-sheet">
				<div class="col_small">
					
					<div class="module module-rounded profil">
						<a href="{{ app.user|link2user }}" class="clearfix">
							<span class="fleft useravatar"><img src="" class="avatar size32" alt="{{ app.user.username }}" /></span>
							<span class="username">{{ app.user.username }}</span>
						</a>					
					</div>

					<div class="module module-rounded menu">
						{% if action != null %} Action: {{ action }} {% endif %}
						<ul class="dashboard-links">
							<li><i class="icon-user"></i><a href="{{ path('fos_user_profile_edit') }}?action=account">Mon compte</a></li>
							<li><i class="icon-star"></i><a href="{{ path('fos_user_profile_edit') }}?action=info">Mon profil</a></li>
							<li><i class="icon-picture"></i><a href="{{ path('fos_user_profile_edit') }}?action=avatar">Mon avatar</a></li>
							<li><i class="icon-lock"></i><a href="{{ path('fos_user_profile_edit') }}?action=password">Mon mot de passe</a></li>
							<li><i class="icon-envelope"></i><a href="{{ path('fos_user_profile_edit') }}?action=mailing">Mes préférences mailing</a></li>
							<li><i class="icon-fire"></i><a href="{{ path('my_user_delete_me') }}">Supprimer mon compte</a></li>
						</ul>
					</div>
				</div>

			<div class="col_large">
				<div class="module module-rounded account-form">
										
					{% block fos_user_content %}
					{% include "FOSUserBundle:Profile:edit_content.html.twig" %}
					{% endblock fos_user_content %}

				</div>
			</div>
		</div>
	</div>
{% endblock %}