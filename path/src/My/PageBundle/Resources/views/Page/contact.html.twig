{% extends '::layout_centered.html.twig' %}

{% block page_content -%}
  
	<div class="head-sheet">
	<h1 class="title-sheet">Contacter nous</h1>


	{{ form_start(form, {'class':'form form-ws','attr':{'class':'form form-ws'}} ) }}
	   	
	   	{% if form_errors(form) %}
	   			{{ form_errors(form) }}
	   	{% endif %}

		{{ form_row(form.user) }}
		{{ form_row(form.email) }}
		{{ form_row(form.title) }}
		{{ form_row(form.message) }}
	    
	    <button type="submit" class="btn-ws">Envoyer</button>
	    <p>&nbsp;</p>

	{{ form_end(form) }}

	</div>

{% endblock %}
