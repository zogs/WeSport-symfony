{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
<table class="table table-bordered table-striped sonata-ba-list">
    <thead>
        <tr>
            <th colspan="3">Dernières activités postés </th>
        </tr>
        <tr>
            <th>Sport</th>
            <th>Ville</th>
            <th>Titre</th>
            <th>Date dépôt</th>
        </tr>
    </thead>

    <tbody>
    {% for event in events %}

        <tr>
            <td>
                <span class="ws-sport-icon">
                    <span class="ws-icon ws-icon-{{ event.sport.icon }} tooltipbottom" data-toggle="tooltip" title="{{ event.sport.name}}"></span>
                </span>
                {{ event.sport.name }}
            </td>
            <td>
                {{ event.location.city.name }}
            </td>
            <td>
               {{ event.title }}
            </td>
            <td>
                {{ event.dateDepot|date('d/m/Y') }}
            </td>
        </tr>

    {% endfor %}
    </tbody>
</table>
{% endblock %}