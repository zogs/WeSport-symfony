{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
<table class="table table-striped table-hover sonata-ba-list">
    <thead>
        <tr class="success">
            <th colspan="4"><strong>Prochaine activités à avoir lieu</strong></th>
        </tr>
        <tr class="warning">
            <th>Ville</th>
            <th>Sport</th>
            <th>Titre</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
    {% for event in events %}

        <tr>
            <td>
                {{ event.location.city.name }}
            </td>
            <td>
                <span class="ws-sport-icon">
                    <span class="ws-icon ws-icon-{{ event.sport.icon }} tooltipbottom" data-toggle="tooltip" title="{{ event.sport.name}}"></span>
                </span>
                {{ event.sport.name }}
            </td>
            <td>
               <a href="{{ path('admin_ws_events_event_edit',{id:event.id}) }}">{{ event.title }}</a>               
            </td>
            <td>
                {{ event.date|date('d/m/Y') }} à {{ event.time|date('h:i') }}
            </td>
        </tr>

    {% endfor %}
    </tbody>
</table>
{% endblock %}